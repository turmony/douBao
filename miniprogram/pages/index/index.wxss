.container {
  padding: 30rpx;
  padding-bottom: 60rpx;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 绑定码卡片 */
.code-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.code-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 20rpx;
}

.code-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 12rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.code-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 10rpx;
}

.code-expire {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  margin-bottom: 20rpx;
}

.refresh-btn {
  margin-top: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border-radius: 40rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  font-size: 28rpx;
  padding: 20rpx;
}

.refresh-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 状态指示器 */
.status-section {
  margin-bottom: 30rpx;
}

.status-indicator {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.query-btn {
  width: 100%;
  background-color: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  font-size: 28rpx;
  padding: 20rpx;
  font-weight: 500;
}

.query-btn:active {
  background-color: #f0f4ff;
}

.status-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.status-content {
  flex: 1;
}

.status-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.waiting-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.status-processing .status-icon {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 历史记录部分 */
.history-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.history-count {
  font-size: 24rpx;
  color: #999;
  background-color: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 单条历史记录 */
.history-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  animation: fadeInUp 0.4s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.history-time {
  font-size: 24rpx;
  color: #666;
}

.history-wait-time {
  font-size: 24rpx;
  color: #999;
  background-color: #f8f8f8;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 图片展示 */
.image-wrapper {
  margin-bottom: 24rpx;
  position: relative;
}

.screenshot-img {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: block;
}

.image-tip {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 分析结果 */
.answer-content {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.answer-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.answer-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 错误提示 */
.error-section {
  background-color: #fff3f3;
  border-left: 6rpx solid #f56c6c;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
}

.error-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.error-text {
  font-size: 26rpx;
  color: #f56c6c;
  flex: 1;
  line-height: 1.6;
}

/* 使用说明 */
.help-section {
  background-color: #f0f9ff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}

.help-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.help-item {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
  padding-left: 20rpx;
}