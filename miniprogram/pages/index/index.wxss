/* 容器 */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* 绑定码区域 */
.code-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.code-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.code-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.refresh-btn::after {
  border: none;
}

.refresh-btn-hover {
  transform: rotate(180deg);
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.5);
}

.refresh-icon {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.code-display {
  display: flex;
  align-items: center;
  justify-content: center;
}

.code-text {
  font-size: 68rpx;
  font-weight: bold;
  color: #667eea;
  letter-spacing: 8rpx;
  font-family: 'Courier New', monospace;
  text-align: center;
}

.expire-info {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 状态区域 */
.status-section {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.status-indicator {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
}

.status-icon {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: pulse 2s infinite;
  flex-shrink: 0;
}

.status-waiting .status-icon {
  background: #999;
}

.status-uploading .status-icon,
.status-processing .status-icon,
.status-analyzing .status-icon,
.status-streaming .status-icon {
  background: #667eea;
}

.status-completed .status-icon {
  background: #52c41a;
}

.status-error .status-icon {
  background: #ff4d4f;
  animation: shake 0.5s;
}

.status-text {
  color: #333;
  flex: 1;
}

.timer-display {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.timer-label {
  color: #999;
  margin-right: 10rpx;
}

.timer-value {
  color: #667eea;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

.error-msg {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff2f0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.error-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.error-text {
  color: #ff4d4f;
  font-size: 26rpx;
  flex: 1;
  word-break: break-word;
}

/* 历史记录区域 */
.history-section {
  margin-bottom: 30rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.history-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  animation: slideIn 0.3s ease-out;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-duration {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  font-family: 'Courier New', monospace;
}

.item-image-wrapper {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.item-image {
  width: 100%;
  display: block;
  transition: transform 0.3s ease;
}

.item-image:active {
  transform: scale(0.98);
}

.item-answer {
  position: relative;
  padding: 24rpx;
  background: #f7f8fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  min-height: 80rpx;
}

/* 等待分析状态 */
.waiting-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.waiting-dots {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.waiting-dots .dot {
  font-size: 32rpx;
  color: #667eea;
  animation: bounce 1.4s infinite ease-in-out;
}

.waiting-dots .dot:nth-child(1) {
  animation-delay: 0s;
}

.waiting-dots .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.waiting-dots .dot:nth-child(3) {
  animation-delay: 0.4s;
}

.waiting-text {
  font-size: 26rpx;
  color: #999;
}

/* 错误状态 */
.error-indicator {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff2f0;
  border-radius: 12rpx;
  gap: 12rpx;
}

.error-indicator .error-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.error-indicator .error-text {
  font-size: 26rpx;
  color: #ff4d4f;
  flex: 1;
  word-break: break-word;
}

.streaming-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #667eea;
}

.streaming-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #667eea;
  margin-right: 12rpx;
  animation: blink 1.4s infinite;
  flex-shrink: 0;
}

.streaming-text {
  font-weight: 500;
}

.answer-text {
  display: block;
  word-wrap: break-word;
  white-space: pre-wrap;
  word-break: break-word;
}

.answer-text.streaming {
  color: #666;
}

/* 流式输出光标效果 */
.cursor {
  display: inline-block;
  width: 2rpx;
  height: 1.2em;
  background: #667eea;
  margin-left: 4rpx;
  vertical-align: text-bottom;
  animation: blink 1s infinite;
}

/* 使用说明 */
.instruction-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 30rpx 40rpx;
  backdrop-filter: blur(10rpx);
}

.instruction-title {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.instruction-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.instruction-number {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex-shrink: 0;
  line-height: 40rpx;
  text-align: center;
}

.instruction-text {
  flex: 1;
  padding-top: 6rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  margin: 40rpx 0;
}

.empty-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
}

/* 动画效果 */
@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-10rpx);
  }
  75% {
    transform: translateX(10rpx);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes blink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0;
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
    opacity: 0.4;
  }
  50% {
    transform: translateY(-10rpx);
    opacity: 1;
  }
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .code-text {
    font-size: 56rpx;
    letter-spacing: 4rpx;
  }
  
  .refresh-btn {
    width: 56rpx;
    height: 56rpx;
  }
  
  .refresh-icon {
    font-size: 32rpx;
  }
}